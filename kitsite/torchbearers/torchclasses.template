   /* copied! */
  function utf8_xmlsafe ($str) {
    $str = utf8_decode($str);
    $str = str_replace(
      array (
        '&', '"', "'", '<', '>'
      ),
      array (
        '&amp;', '"', '&apos;' , '&lt;' , '&gt;'
      ),
      $str
    );
    $str = utf8_encode($str);
    return $str;
  }

